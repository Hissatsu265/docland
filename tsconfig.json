  "include": ["src"],
  "compilerOptions": {
    "module": "esnext",   
    "target": "esnext",   
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "jsx": "react-jsx" ,
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@routes/*": ["src/routes/*"],
      "@assets/*": ["src/assets/*"],
      "@src/*": ["src/*"]
    }
  }
  
}
